# This is an example file. Copy it to .env and fill in the values for local development.

# Service URLs
POSTGRES_URL="postgresql://chessmate_user:chessmate_password@postgres:5432/chessmate_db"
POSTGRES_USER="chessmate_user"
POSTGRES_PASSWORD="chessmate_password"
POSTGRES_DB="chessmate_db"
POSTGRES_HOST="postgres"
POSTGRES_PORT="5432"
MCP_TOOLBOX_URL="http://genai-toolbox:5000"
REDIS_URL="redis://redis:6379"

# Timeouts and Resilience
GENAI_TOOLBOX_TIMEOUT=5.0
ENABLE_CACHING=true
ENABLE_FALLBACKS=true

# ADK and LLM Configuration
LLM_PROVIDER="gemini"
LLM_MODEL="gemini-2.5-pro"

# FIXED: Use GOOGLE_API_KEY for direct Gemini models (Google ADK)
# This is the key change that will fix your authentication issue
GOOGLE_API_KEY="<your_gemini_api_key>"

# Set to False for Google AI Studio, True for Vertex AI
USE_VERTEX_AI=false

# Alternative: If you want to use LiteLLM wrapper instead (not recommended for Gemini)
# Change LLM_PROVIDER to "gemini_litellm" and use:
# GEMINI_API_KEY="Your_API_KEY_Here"

# Data Quality and Quarantine
ENABLE_DATA_QUALITY_QUARANTINE=true
QUARANTINE_LOG_PATH="data/quarantine.log"
DATA_QUALITY_THRESHOLD=0.95